{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts" // Các tệp TypeScript muốn biên dịch
  ],
  "exclude": [
    "node_modules" // Loại trừ thư mục node_modules khỏi quá trình biên dịch
  ]
  
}
